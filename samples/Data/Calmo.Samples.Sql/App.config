<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <sectionGroup name="core.Settings">
      <section name="data.Settings" type="Calmo.Data.Configuration.DataSection, Calmo.Data" allowLocation="false" allowDefinition="Everywhere" />
    </sectionGroup>

  </configSections>

  <core.Settings>
    <data.Settings defaultConnectionString="adventureWorks" />
  </core.Settings>

  <connectionStrings>
    <add name="adventureWorks" connectionString="Data Source=.\SQLEXPRESS;
                          AttachDbFilename=adventure-works-2012-oltp-data-file.mdf;
                          Integrated Security=True;
                          Connect Timeout=30;
                          User Instance=True" providerName="System.Data.SqlClient" />
  </connectionStrings>
</configuration>